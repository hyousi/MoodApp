<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Diary_Entry"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/txt_diaryView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1 October 2019"
            android:textColor="@color/colorLightBlue"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/txt_diaryView_plain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_diaryView_date"
            android:text="How are you feeling today?"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_box"
            android:layout_marginTop="30dp"
            android:hint="Write Feelings Here"
            android:gravity="center"
            android:layout_below="@id/txt_diaryView_plain"
            android:layout_above="@id/btn_diaryEntry_calm"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/btn_diaryEntry_calm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorDarkBlue"
            android:text="Calm"
            android:textColor="@color/colorWhite"
            android:layout_above="@+id/btn_diaryEntry_submit"
            android:layout_marginBottom="30dp"
            />
        <Button
            android:id="@+id/btn_diaryEntry_stressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorDarkBlue"
            android:text="Stressed"
            android:layout_marginRight="30dp"
            android:textColor="@color/colorWhite"
            android:layout_toLeftOf="@id/btn_diaryEntry_calm"
            android:layout_above="@+id/btn_diaryEntry_submit"
            android:layout_marginBottom="30dp"
            />
        <Button
            android:id="@+id/btn_diaryEntry_joyful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorDarkBlue"
            android:layout_toRightOf="@id/btn_diaryEntry_calm"
            android:text="Joyful"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="30dp"
            android:layout_above="@+id/btn_diaryEntry_submit"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/btn_diaryEntry_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorLightBlue"
            android:text="Submit"
            android:textColor="@color/colorWhite"
            />



    </RelativeLayout>



</FrameLayout>