<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_SignUp"
    android:background="@color/colorBackground"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp">

    <TextView
        android:id="@+id/txt_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/txt_signup_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlue"
        android:text="Sign Up"
        android:layout_below="@+id/txt_signup_title"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/et_signup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:hint="Admin"
        android:inputType="text"
        android:layout_below="@+id/txt_signup_username"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/txt_signup_username"
        android:backgroundTint="@color/colorWhite"
        />

    <TextView
        android:id="@+id/txt_signup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlue"
        android:text="Password"
        android:layout_below="@+id/et_signup_username"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/txt_signup_password"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_alignLeft="@id/txt_signup_username"
        android:backgroundTint="@color/colorWhite"
        />

    <TextView
        android:id="@+id/txt_signup_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlue"
        android:text="Confirm Password"
        android:layout_below="@+id/et_signup_password"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_signup_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/txt_signup_confirm_password"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_alignLeft="@id/txt_signup_username"
        android:backgroundTint="@color/colorWhite"
        />

    <TextView
        android:id="@+id/txt_signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlue"
        android:text="E-mail"
        android:layout_below="@+id/et_signup_confirm_password"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:hint="admin@gmail.com"
        android:layout_below="@+id/txt_signup_email"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_alignLeft="@id/txt_signup_username"
        android:backgroundTint="@color/colorWhite"
        />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/et_signup_email"
        android:layout_marginTop="30dp"
        />


</RelativeLayout>