<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_SignIn"
    android:background="@color/colorBackground"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp">

    <TextView
        android:id="@+id/txt_signin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Sign In"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/txt_signin_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlue"
        android:text="Username"
        android:layout_below="@+id/txt_signin_title"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/et_signin_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:hint="Admin"
        android:inputType="text"
        android:layout_below="@+id/txt_signin_username"
        android:textSize="25sp"
        android:layout_alignLeft="@id/txt_signin_username"
        android:backgroundTint="@color/colorWhite"
        />

    <TextView
        android:id="@+id/txt_signin_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlue"
        android:text="Password"
        android:layout_below="@+id/et_signin_username"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/et_signin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:hint="Admin"
        android:inputType="textPassword"
        android:layout_below="@+id/txt_signin_password"
        android:textSize="25sp"
        android:layout_alignLeft="@id/txt_signin_username"
        android:backgroundTint="@color/colorWhite"
        />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/colorWhite"
        android:background="@color/colorLightBlue"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_signin_password"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="signIn"
        android:clickable="true"
        android:text="Sign up here"
        android:textSize="18sp"
        android:textColor="@color/colorLightBlue"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_signin"
        />

</RelativeLayout>